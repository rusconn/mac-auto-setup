{
  "$schema": "vscode://schemas/settings/user",
  "window.newWindowDimensions": "inherit",
  "telemetry.telemetryLevel": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.hover.delay": 500,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.suggest.showWords": false,
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 100,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit"
  },
  "explorer.autoReveal": "focusNoScroll",
  "explorer.sortOrderLexicographicOptions": "upper",
  "git-graph.date.format": "ISO Date & Time",
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/opt/homebrew/bin/fish",
      "args": ["-i"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "fish",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "hadolint.hadolintPath": "/opt/homebrew/bin/hadolint",
  "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",
  "dotfiles.repository": "https://github.com/rusconn/dotfiles.git",
  "dotfiles.targetPath": "~/dotfiles",
  "dotfiles.installCommand": "~/dotfiles/install.sh",
  "files.associations": {
    "pre-commit": "shellscript",
    "*.plist": "plist"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rust]": {
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdownlint.config": {
    "MD033": false
  },
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "markdown-preview-enhanced.mathRenderingOption": "MathJax",
  "files.exclude": {
    "**/tsconfig.tsbuildinfo": true,
    "**/.eslintcache": true,
    "**/.next": true,
    "**/node_modules": true
  },
  "window.nativeTabs": true,
  "window.customTitleBarVisibility": "never",
  "workbench.editor.showTabs": "none"
}
